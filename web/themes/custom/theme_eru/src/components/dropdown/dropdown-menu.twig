{#
/**
 * @file
 * Template for a Dropdown menu component.
 */
#}
<ul class="dropdown-menu">  
  {% for item in items %}	
    {% set nav_link_classes = [
      item.url.options.attributes.class,
      'dropdown-item',
      item.in_active_trail ? 'active'
    ] %}    
    <li>{{ link(item.title, item.url, { 'class': nav_link_classes }) }}</li>    
  {% endfor %}
</ul>
