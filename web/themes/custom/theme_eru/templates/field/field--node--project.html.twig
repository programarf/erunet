{#
/**
 * @file
 * Default template for a field.
 */
#}
{%
  set classes = [
  bundle|clean_class ~ '__' ~ field_name_clean|clean_class,
  label_display == 'inline' ? 'd-flex',
  content,
]
%}
{%
  set title_classes = [
  'field__label',
  'ubicacion',
  'font-weight-bold',
  label_display == 'visually_hidden' ? 'visually-hidden',
]
%}

{% if label_hidden %}
  {% if multiple %}
    <div{{attributes.addClass(classes)}}>
      {% for item in items %}
        <div{{item.attributes.addClass('field__itemsolo')}}>{{ item.content }}</div>
      {% endfor %}
    </div>
  {% else %}
    {% for item in items %}
      <div{{attributes.addClass(classes)}}>{{ item.content }}</div>
    {% endfor %}
  {% endif %}
{% else %}
  <div{{attributes.addClass(classes)}}>
    <h3>
      {{ label }}
      {% if label_display == 'inline' %}
        <span class="field__label__suffix mr-1">:</span>
      {% endif %}
    </h3>
    {% if multiple %}    
      {% endif %}
      {% for item in items %}       
        <div {{item.attributes.addClass('field__item')}}>{{ item.content }}</div>
      {% endfor %}
      {% if multiple %}     
    {% endif %}
  </div>
{% endif %}

